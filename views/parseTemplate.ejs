<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Parse Template</title>
  <style>
    /* General Styles */
    body {
      font-family: Arial, sans-serif;
      background-color: #f4f4f9;
      display: flex;
      flex-direction: column;
      align-items: center;
      margin: 0;
      padding: 20px;
    }
    
    h1 {
      font-size: 1.8em;
      color: #333;
      margin-bottom: 20px;
    }

    /* Button Container */
    #buttons {
      width: 100%;
      max-width: 400px;
      display: flex;
      flex-direction: column;
      gap: 10px;
    }

    /* Button Styles */
    #buttons a {
      text-decoration: none;
    }

    #buttons button {
      width: 100%;
      padding: 15px;
      font-size: 1em;
      font-weight: bold;
      color: #333;
      background-color: #e8eaf6;
      border: 1px solid #ccc;
      border-radius: 8px;
      transition: background-color 0.3s, color 0.3s, border-color 0.3s;
      cursor: pointer;
    }

    #buttons button:hover {
      background-color: #7986cb;
      color: #fff;
      border-color: #7986cb;
    }
  </style>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Parse Template</title>
</head>
<body>
    <h1>Parsed Input Fields</h1>
    <form action="/generate-email" method="post">
        <% fields.forEach(field => { %>
            <label for="<%= field.key %>"><%= field.key %>:</label>
            <input type="text" id="<%= field.key %>" name="<%= field.key %>" value="<%= field.value %>" />
            <br />
        <% }) %>
        <button type="submit">Generate Email</button>
    </form>
</body>
</html>