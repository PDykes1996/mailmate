<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Parse Template</title>
  <link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/@picocss/pico@2/css/pico.min.css"
  >
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Parse Template</title>
</head>
<body>
    <h1>Parsed Input Fields</h1>
    <form action="/generate-email" method="post">

      <h2>Static Mail Data</h2>
      <% for (let key in staticMailData) { %>
        <label for="static_<%= key %>"><%= key %>:</label>
        <input type="email" id="static_<%= key %>" name="static_<%= key %>" value="<%= staticMailData[key] %>" />
        <br />
      <% } %>
  
      <h2>Subject Fields</h2>
      <% subjectFields.forEach(field => { %>
        <label for="subject_<%= field.label %>"><%= field.label %>:</label>
        <input type="<%= field.type %>" id="subject_<%= field.label %>" name="subject_<%= field.label %>" value="<%= field.defaultValue %>" />
        <br />
      <% }) %>
  
      <h2>Body Fields</h2>
      <% bodyFields.forEach(field => { %>
        <label for="body_<%= field.label %>"><%= field.label %>:</label>
        <input type="<%= field.type %>" id="body_<%= field.label %>" name="body_<%= field.label %>" value="<%= field.defaultValue %>" />
        <br />
      <% }) %>

      <!-- Hidden fields to store subject and body data -->
      <input type="hidden" name="subject" value="<%= subject %>" />
      <input type="hidden" name="body" value="<%= body %>" />

      <button type="submit">Generate MailTo Link</button>
    </form>
</body>
</html>