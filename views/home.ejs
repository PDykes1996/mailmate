<h1 class="fs:xl">Create a new template</h1>
<div id="buttons">
	<button onclick="openCreateDialog()">Create Template</button>
</div>

<h1 class="fs:xl">Templates</h1>

<!-- Search Input -->
<form action="/search" method="get" class="cluster gap:-1">
	<input type="text" name="q" placeholder="Search templates..." value="<%= query %>" />
	<button>Search</button>
</form>

<% if (query.length) { %>
<form action="/" method="get">
	<button class="btn-link">Clear Search</button>
</form>
<% } %>

<div id="buttons" class="grid">
	<% templates.forEach(template => { %>
	<article class="box flow">
		<header class="repel">
			<h1 class="fs:md fw:semibold"><%= template.name %></h1>
			<button class="no-style" onclick="openUpdateDialog(`<%= template.stringified %>`)">
				<svg
					xmlns="http://www.w3.org/2000/svg"
					fill="none"
					viewBox="0 0 24 24"
					stroke-width="1.75"
					stroke="var(--txt-2)"
					class="size-6"
					style="width: 1.1rem"
				>
					<path
						stroke-linecap="round"
						stroke-linejoin="round"
						d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10"
					/>
				</svg>
			</button>
		</header>
		<p><%=template.body.replace("\n", "").slice(0, 25) %>...</p>
		<footer class="cluster">
			<button class="no-style" onclick="openDeleteDialog(`<%= template.stringified %>`)">
				<svg
					xmlns="http://www.w3.org/2000/svg"
					fill="none"
					viewBox="0 0 24 24"
					stroke-width="1.75"
					stroke="#e05d5d"
					class="size-6"
					style="width: 1.1rem"
				>
					<path
						stroke-linecap="round"
						stroke-linejoin="round"
						d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0"
					/>
				</svg>
			</button>
			<a style="margin-left: auto" href="/template/<%= template.id %>">
				<button class="primary">Select</button>
			</a>
		</footer>
	</article>
	<% }) %> <% if (templates.length === 0 && query?.length) { %>
	<article class="box flow">
		<header class="fs:md fw:semibold">No Templates Found</header>
		<p>There are no templates that match your search.</p>
	</article>
	<% } %>
</div>
